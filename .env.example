# MammoViewer Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=True
HOST=0.0.0.0
PORT=5000

# 3D Slicer Path
# Uncomment and set the appropriate path for your operating system

# macOS
#SLICER_PATH=/Applications/Slicer.app/Contents/MacOS/Slicer

# Windows
#SLICER_PATH=C:\Program Files\Slicer 5.4.0\Slicer.exe

# Linux
#SLICER_PATH=/opt/Slicer/Slicer

# Upload Configuration
MAX_FILE_SIZE=524288000
MAX_FILES_PER_UPLOAD=100

# Conversion Parameters
THRESHOLD_DEFAULT=100
THRESHOLD_MIN=10
THRESHOLD_MAX=1000
SMOOTHING_ITERATIONS=15
DECIMATION_RATE=0.75

# Cleanup Configuration
AUTO_CLEANUP=True
CLEANUP_AFTER_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_ROTATION=100 MB
LOG_RETENTION=1 week
